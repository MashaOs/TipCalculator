<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:alpha="1.0"
    android:background="@android:color/darker_gray" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        
        android:alpha="1.0"
        android:background="@android:color/black"
        tools:context=".TipCalculatorActivity" >

        <TextView
            android:id="@+id/txtViewBillAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:text="@string/edtBillAmount_label"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edtBillAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/txtViewBillAmount"
            android:layout_marginLeft="10dp"
            android:background="@android:color/background_light"
            android:layout_toRightOf="@id/txtViewBillAmount"
            android:inputType="phone"
            android:textSize="25sp"
            android:width="150dp" />

        <CheckBox
            android:id="@+id/chkRound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtViewBillAmount"
            android:layout_marginTop="50dp"
            android:text="@string/chkRound_label"
            android:checked="true"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chkRound"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@android:color/darker_gray"
            android:text="@string/btnCalculate_label"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtTipResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnCalculate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:textSize="25sp" />
    </RelativeLayout>

</LinearLayout>
